<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/include_error_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="?actionBarSize" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/pick_currency"
            layout="@layout/item_pick_currency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/line_chart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/toggle"
            android:layout_below="@+id/pick_currency"
            android:layout_margin="4dp" />

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/fullscreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/pick_currency"
            android:layout_margin="4dp"
            android:background="@null"
            android:src="@drawable/ic_fullscreen_black_24dp"
            android:tint="@color/colorAccent"
            android:visibility="visible" />

        <com.example.yegor.togglenavigation.ToggleNavigation
            android:id="@+id/toggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="2dp" />

    </RelativeLayout>

</FrameLayout>