<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar_content"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/colorPrimary">

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/back_button"
        style="?android:borderlessButtonStyle"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:scaleType="centerInside"
        android:src="@drawable/ic_arrow_back_black_24dp"
        android:tint="@color/white" />

    <TextView
        android:id="@+id/rate"
        style="@style/ToolbarText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/byr"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/back_button"
        android:layout_toRightOf="@+id/back_button"
        android:gravity="end"
        android:minWidth="64sp"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/byr"
        style="@style/ToolbarText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/rate"
        android:layout_toRightOf="@+id/rate"
        android:text="BYR"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/date"
        style="@style/ToolbarText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/byr"
        android:layout_toLeftOf="@+id/scale"
        android:layout_toRightOf="@+id/byr"
        android:layout_toStartOf="@+id/scale"
        android:gravity="center"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/scale"
        style="@style/ToolbarText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/byr"
        android:layout_centerHorizontal="true"
        android:layout_toLeftOf="@+id/abbr"
        android:layout_toStartOf="@+id/abbr"
        android:gravity="end"
        android:minWidth="32sp"
        android:textSize="16sp" />

    <Button
        android:id="@+id/abbr"
        style="@style/ToolbarText"
        android:layout_width="72dp"
        android:layout_height="36dp"
        android:layout_toLeftOf="@+id/fullscreen"
        android:layout_toStartOf="@+id/fullscreen"
        android:background="@drawable/backgroung_button_abbr"
        android:textColor="@color/colorAccent"
        android:textStyle="bold" />

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/fullscreen"
        style="?android:borderlessButtonStyle"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="centerInside"
        android:src="@drawable/icon_button_fullscreen_exit_32dp" />

    <com.rey.material.widget.ProgressView
        android:id="@+id/loading_view"
        style="@style/FullscreenToolbarLinearProgressView"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true" />

</RelativeLayout>